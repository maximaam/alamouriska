{% extends 'base.html.twig' %}

{% block title %}
    {{ entity }} alg√©rien(ne) : {{ post }}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                {%  include 'partials/avatar.html.twig' with {'current_user': post.user, 'size': 128, 'classes': 'mr-3 rounded' } only %}
                <p class="mt-1">
                    Par: {{ post.user.username }}
                    <br>
                    Le: {{ post.createdAt | date }}
                </p>

                {% if post.user == app.user %}
                    <div>
                        <button title="Supprimer cette publication" type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete-post">
                            <i class="fa fa-trash"></i>
                        </button>
                    </div>
                {% endif %}
            </div>

            <div class="col-sm-10 almrsk-post">
                <div class="bg-white rounded text-dark mb-4">

                    {% if post.imageName %}
                        <div class="mb-3 bg-secondary">
                            <a href="{{ path('post_show', { 'domain': domain, 'id': post.id, 'slug': post.slug }) }}">
                                {%  include 'partials/post_image.html.twig' with {'type': post } only %}
                            </a>
                        </div>
                    {% endif %}

                    <div class="p-3">
                        {% if domain == 'mots' %}
                            <h1 class="mb-1" title="Mot">{{ post }}</h1>
                            <h2 class="mt-0 pb-2 text-muted border-bottom">
                                <span>{{ 'label.tamazight_char' | trans }}: {{ post.inTamazight | default('...') }}</span>
                                <br>
                                <span>{{ 'label.arabic_char' | trans }}: {{ post.inArabic | default('...') }}</span>
                            </h2>
                            <p>{{ post.description }}</p>
                        {% else %}
                            <p class="p-2 border-bottom mb-0" title="{{ entity }}">
                                <i class="fa fa-book"></i>
                                {{ post }}
                            </p>
                            <p class="p-2 mb-0" title="Explication">
                                <i class="fa fa-question-circle"></i>
                                {{ post.description }}
                            </p>
                        {% endif %}
                    </div>
                </div>

                <div class="card text-dark">
                    <div class="card-header font-weight-bold">{{ 'label.comments' | trans }}</div>

                    <div class="card-body">

                        <div id="fos_comment_thread" data-thread="{{ thread.id }}" class="row">
                            {% include 'partials/comments.html.twig' with {
                                'comments': comments,
                                'thread': thread
                            } %}
                        </div>
                        {#{% include '@FOSComment/Thread/async.html.twig' with {'id': mot.id } %}#}
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div id="fos_comment_thread"></div>

    <!-- Modal -->
    <div class="modal fade" id="delete-post" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered text-dark" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Supprimer une publication</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Confirmer la suppression de cette publication?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <a href="{{ path('post_delete', {'domain': domain, 'id': post.id }) }}" class="btn btn-danger">Oui, supprimer</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/foscomment/js/comments.js') }}"></script>
{% endblock %}