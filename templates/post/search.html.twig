{% extends 'base.html.twig' %}

{% set term = app.request.get('terme') %}
{% set title = 'label.almrsk.search_h1' | trans({'%term%' : term }) %}

{% block title %}
    {{ title }}
    {{ parent() }}
{% endblock %}

{% block opengraph_title %}
    <meta property="og:title" content="{{ title }}" />
{% endblock %}

{% block opengraph_description %}
    <meta property="og:description" content="Cherchez et trouvez des mots de la langue algÃ©rienne populaire, derdja" />
{% endblock %}

{% block body %}

    <div class="container mb-4">
        <h1>{{ 'label.almrsk.search_h1' | trans({'%term%' : term }) }}</h1>
    </div>

    <div class="container">
        <div class="row text-dark">
            <div class="col-sm">{% include 'partials/post_list.html.twig' with {'posts': words | default(null), 'header': 'label.words' | trans, 'domain': domain_by_entity('App\\Entity\\Word'), 'search': true } only %}</div>
            <div class="col-sm">{% include 'partials/post_list.html.twig' with {'posts': expressions | default(null), 'header': 'label.expressions' | trans, 'domain': domain_by_entity('App\\Entity\\Expression'), 'search': true } only %}</div>
            <div class="col-sm">{% include 'partials/post_list.html.twig' with {'posts': proverbs | default(null), 'header': 'label.proverbs' | trans, 'domain': domain_by_entity('App\\Entity\\Proverb'), 'search': true } only %}</div>
            <div class="col-sm">{% include 'partials/post_list.html.twig' with {'posts': jokes | default(null), 'header': 'label.jokes' | trans, 'domain': domain_by_entity('App\\Entity\\Joke'), 'search': true } only %}</div>
        </div>
    </div>

{% endblock %}