<!DOCTYPE html>

<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                - {{ app_name }}
            {% endblock %}
        </title>

        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="robots" content="index,follow">
        <meta name="author" content="{{ app_name }}">

        {% block font %}
        {% endblock %}

        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
    </head>

    <body{{ app.request.get('_route') == 'index_index' ? ' class="cp"'}}>

    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v3.2"></script>

    <header class="main-header">
        <nav class="navbar fixed-top navbar-expand-lg navbar-light text-dark">
            <div class="container">

                <a class="navbar-brand" href="/">
                    <img src="{{ asset('images/alamouriska-logo.jpg') }}" alt="{{ app_name }} Logo" title="{{ app_name }} Logo" class="rounded">

                    <!--
                    <span class="d-lg-none">{{ app_name }}</span>
                    <span class="d-none d-md-inline">{{ app_name }}</span>
                    -->
                </a>

                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">

                    {{ knp_menu_render('main') }}

                    <div class="user-cont mr-2">
                        <a href="/#journal-public" class="d-lg-none btn btn-primary">Journal</a>

                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            <a href="{{ path('fos_user_profile_show') }}" class="user btn rounded" title="ParamÃ¨tres">
                                <i class="fa fa-cog"></i>
                            </a>
                            {%  include 'partials/avatar.html.twig' with { 'current_user': app.user, 'size': 32, 'classes': 'rounded' } only %}
                        {% else %}
                            <a href="{{ path('fos_user_security_login') }}" title="Se connecter ou S'inscrire" class="user btn rounded">
                                <i class="fa fa-user-circle"></i>
                            </a>
                        {% endif %}
                    </div>

                    {% block search %}
                        {{ include('partials/search.html.twig', { domain : 'tout' }) }}
                    {% endblock %}

                </div>
            </div>
        </nav>
    </header>

    <main>
        {% block body %}{% endblock %}
    </main>

    <footer class="main-footer py-3 py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">
                    {{ knp_menu_render('footer') }}
                </div>
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <a href="https://www.facebook.com/alamouriska/" target="_blank" class="display-4 text-white">
                        <i class="fa fa-facebook-official" title="{{ app_name }} Facebook page"></i>
                    </a>
                    <a href="https://www.twitter.com/alamouriska" target="_blank" class="display-4 text-white">
                        <i class="fa fa-twitter" title="{{ app_name }} Twitter page"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script src="{{ asset('js/main.js') }}"></script>

    {% block javascripts %}{% endblock %}

    <!--
    <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
        <source src="" type="video/mp4">
    </video>
    -->
    </body>
</html>
