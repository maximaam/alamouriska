{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="card text-dark">
        <div class="card-header">
            <h1 class="text-center">{{ 'resetting.request.submit'|trans }}</h1>
        </div>
        <div class="card-body bg-light">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="control-label" for="username">{{ 'resetting.request.username'|trans }}*</label>
                    <input type="text" id="username" name="username" class="form-control" required="required" />
                </div>
                <div class="form-group">
                    <div class="text-right">
                        <a href="{{ path('fos_user_profile_show') }}" class="btn btn-secondary mr-2">{{ 'label.cancel' | trans({}, 'messages') }}</a>
                        <button type="submit" class="btn btn-happy">{{ 'label.submit' | trans({}, 'messages') }}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock fos_user_content %}
