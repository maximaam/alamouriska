{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <h1 class="text-center">Profil</h1>

    <hr>

    <dl class="dl-horizontal">
        <dt>{{ 'form.username' | trans }}</dt>
        <dd>{{ user.username }}</dd>
        <dt>{{ 'form.email' | trans }}</dt>
        <dd>{{ user.email }}</dd>
    </dl>

    <div class="pull-right">

        {% if is_granted("ROLE_ADMIN")  %}
            <a href="/admin" class="btn btn-danger">
                <i class="fa fa-cog"></i>
                Admin
            </a>
        {% endif  %}

        <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary">
            <i class="fa fa-edit"></i>
            {{ 'profile.edit.submit' | trans }}
        </a>
        <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-primary">
            <i class="fa fa-lock"></i>
            {{ 'resetting.reset.submit' | trans }}
        </a>
        <a href="{{ path('fos_user_security_logout') }}" class="btn btn-danger">
            <i class="fa fa-sign-out"></i>
            {{ 'layout.logout' | trans }}
        </a>
    </div>

{% endblock fos_user_content %}
