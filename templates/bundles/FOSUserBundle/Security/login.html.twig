{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    {{ 'security.login.submit'|trans }} - {{ parent() }}
{% endblock %}

{% block fos_user_content %}
    {# include('@FOSUser/Security/login_content.html.twig') #} {# Default layout #}

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h1 class="text-center">{{ 'layout.login' | trans }}</h1>

                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-user"></i></div>
                            </div>
                            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" placeholder="{{ 'form.username' | trans }}" required="required">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-lock"></i></div>
                            </div>
                            <input type="password" id="password" name="_password" class="form-control" value="{{ last_username }}" placeholder="{{ 'form.password' | trans }}" required="required">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="pull-right">
                            <button type="submit" id="_submit" name="_submit" class="btn btn-secondary">
                                <i class="fa fa-sign-in"></i>
                                {{ 'layout.login' | trans }}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-sm mt-5">
                <div>
                    Tu n'es pas encore un alamouriskeur?
                    <br>
                    <a href="{{ path('fos_user_registration_register') }}" title="Inscris-toi">
                        <i class="fa fa-arrow-circle-right"></i>
                        Alamouriski rou7ak!
                    </a>
                </div>
                <hr>
                <div>
                    <abbr title="Quoi? T'as perdu le mot de passe?">Kifech?</abbr> T'ba7arlak el mot de passe?
                    <br>
                    <a href="{{ path('fos_user_resetting_request') }}" title="Clique ici">
                        <i class="fa fa-arrow-circle-right"></i>
                        3abaz h'na
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}