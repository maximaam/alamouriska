{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    {{ mot.inLatin }}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">

            <div class="col-sm-2 mx-auto">

                <p>{%  include 'partials/avatar.html.twig' with {'almrsk': mot, 'user': app.user, 'size': 128 } only %}</p>

                <p>
                    <i class="fa fa-user"></i>
                    <a href="{{ path('member_show', {'username': mot.user.username}) }}" title="{{'label.almrsk_by' | trans({'%username%': mot.user.username}) }}">
                        {{ mot.user.username }}
                    </a>
                </p>

            </div>

            <div class="col-sm-10">
                <h1 class="mb-1">{{ mot.inLatin }}</h1>

                <div class="media">
                    <div class="media-body">
                        <h2 class="mt-0">
                            <span title="{{ 'label.tamazight_char' | trans }}">{{ mot.inTamazight }}</span> |
                            <span title="{{ 'label.arabic_char' | trans }}">{{ mot.inArabic }}</span>
                        </h2>

                        {% if mot.imageName %}
                            <p>{%  include 'partials/almrsk_image.html.twig' with {'almrsk': mot } only %}</p>
                        {% endif %}

                        <p>{{ mot.description }}</p>

                        <div class="row">
                            <div class="col-6"></div>
                            <div class="col-6">
                                <a href="#" title="{{ 'label.likes' | trans }}" class="float-right">
                                    <i class="fa fa-thumbs-up"></i>
                                    {{ 'label.likes' | trans }}
                                </a>
                            </div>
                        </div>

                        <hr class="bg-white">

                        <div class="comments">
                            sdfsdfgsdfg
                        </div>
                    </div>
                </div>

            </div>




        </div>
    </div>

{% endblock %}
