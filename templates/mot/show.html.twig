{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    {{ mot.inLatin }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                {%  include 'partials/avatar.html.twig' with {'almrsk': mot, 'size': 128 } only %}
                <p class="mt-1">
                    Par: {{ mot.user.username }}
                    <br>
                    Le: {{ mot.createdAt | date('d-m-Y') }}
                </p>
            </div>
            <div class="col-sm-10">
                <div class="media">
                    <div class="media-body">
                        <h1 class="mb-1">{{ mot.inLatin }}</h1>
                        <h2 class="mt-0">
                            <span title="{{ 'label.tamazight_char' | trans }}">{{ mot.inTamazight }}</span> |
                            <span title="{{ 'label.arabic_char' | trans }}">{{ mot.inArabic }}</span>
                        </h2>

                        {% if mot.imageName %}
                            <p>{%  include 'partials/almrsk_image.html.twig' with {'almrsk': mot } only %}</p>
                        {% endif %}

                        <p>{{ mot.description }}</p>
                    </div>
                </div>

                <div class="card text-dark almrsk-comments">
                    <p class="card-header">
                        <strong>{{ 'label.comments' | trans }}</strong>
                    </p>

                    <div class="card-body">
                        <div id="fos_comment_thread" data-thread="{{ thread.id }}">
                            {% include 'partials/comments.html.twig' with {
                                'comments': comments,
                                'thread': thread
                            } %}
                        </div>

                        {#{% include '@FOSComment/Thread/async.html.twig' with {'id': mot.id } %}#}
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div id="fos_comment_thread"></div>

{% endblock %}

{% block javascripts %}

<script src="{{ asset('bundles/foscomment/js/comments.js') }}"></script>

{% endblock %}