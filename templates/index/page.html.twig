{% extends 'base.html.twig' %}

{% block title %}
    {{ page.title }}
    {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="card text-dark">
            <div class="card-header">
                <h1>{{ page.title }}</h1>
            </div>
            <div class="card-body">
                <p class="text-justify">{{ page.description | raw }}</p>
            </div>
        </div>
    </div>

{% endblock %}
