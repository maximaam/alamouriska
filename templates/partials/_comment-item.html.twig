<li class="media mb-3 p-1 border-bottom">
    {%  include 'partials/avatar.html.twig' with {'current_user': object.user, 'size': 64, 'classes': 'mr-3 rounded' } only %}

    <div class="media-body">
        <p class="mt-0 mb-1">
            <strong>Par: <a href="{{ path('user_show', { 'username' : object.user.username })  }}">{{ object.user.username }}</a></strong> |
            <span class="text-secondary">Le: {{ object.createdAt | date }}</span>
        </p>
        <p>{{ object.message | nl2br }}</p>
    </div>

    {% if app.user and object.user.id == app.user.id %}
        <button class="btn btn-danger float-right js_comment-remove" data-uid="{{ object.id }}" data-type="{{ object_type }}">
            <i class="fa fa-trash" title="Supprimer"></i>
        </button>
    {% endif %}
</li>