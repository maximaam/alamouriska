{% for commentinfo in comments %}
    {% if commentinfo.comment is fos_comment_in_state(constant('FOS\\CommentBundle\\Model\\CommentInterface::STATE_VISIBLE')) %}
        {% include 'partials/comment.html.twig' with { 'children': commentinfo.children, 'comment': commentinfo.comment, 'depth': 0, 'view': 'flat' } %}
    {% endif %}
{% endfor %}

{% if is_granted("IS_AUTHENTICATED_REMEMBERED") == false %}
    <a href="{{ path('fos_user_security_login') }}" title="Se connecter ou S'inscrire" class="user btn btn-primary">
        <i class="fa fa-user"></i> Connecte-toi pour ajouter des commentaires !
    </a>
{% else %}
    {% if fos_comment_can_comment_thread(thread) %}
        {{ render(url('fos_comment_new_thread_comments', {"id": thread.id})) }}
    {% endif %}
{% endif %}




