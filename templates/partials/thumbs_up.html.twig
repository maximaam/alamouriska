{% set owner = almrsk | split('\\') | last | lower %}

{% if app.user %}


    {% for thumb in almrsk.user.thumbUps %}
        {{ thumb.ownerId }}
    {% endfor %}


    <a href="#" class="js_almrsk-thumbs-up" data-id="{{ almrsk.id }}" data-owner="{{ owner }}">
        <i class="fa fa-thumbs-up"></i>
        {{ 'label.thumbs_up_add' | trans }}
    </a>
{% else %}
    <a href="{{ path('fos_user_security_login') }}" title="{{ 'label.log_in' | trans }}">
        <i class="fa fa-thumbs-up"></i>
        {{ 'label.thumbs_up_add' | trans }}
    </a>
{% endif %}