{% set owner = almrsk | split('\\') | last | lower %}

{% if app.user %}

    <a href="#" class="js_almrsk-liking" data-id="{{ almrsk.id }}" data-owner="{{ owner }}" data-opposite-action="">
        <i class="fa fa-thumbs-up"></i>

        <span class="likings-label">
            {% if app.user.id in liking_users %}
                {{ 'label.liking_remove' | trans }}
            {% else %}
                {{ 'label.liking_add' | trans }}
            {% endif %}
        </span>

        (<span class="likings-sum">{{ liking_users | length }}</span>)
    </a>

{% else %}
    <a href="{{ path('fos_user_security_login') }}" title="{{ 'label.log_in' | trans }}">
        <i class="fa fa-thumbs-up"></i>
        {{ 'label.liking_add' | trans }}
    </a>
{% endif %}