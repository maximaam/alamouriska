

<form method="post" action="{{ path(route, {'id': routeId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ routeId) }}">
    <button class="btn">Delete</button>
</form>
